<style>
  * {
    --section-margin-top: var(--size-10);
  }

  .hero {
    background-image: linear-gradient(
        to right bottom,
        rgba(44, 138, 62, 0.7),
        rgba(115, 21, 54, 0.7)
      ),
      url("/images/hero1.jpg");
    background-size: cover;
    height: 30rem;
  }

  .hero-container {
    display: grid;
    gap: var(--size-4);
    align-content: center;
    justify-content: center;
    height: 100%;
    text-align: center;
  }

  .hero-container p {
    color: var(--gray-1);
  }

  h1 {
    color: white;
    font-weight: var(--font-weight-3);
