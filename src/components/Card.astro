---
const { img, body } = Astro.props;

import { Image } from "astro:assets";
//const imgImport = img();
---

<article class="card">
  <Image
    class="corridor-img"
    src="https://picsum.photos/300/200"
    alt="Corridoio Studio Casola Visentin"
    width="300"
    height="200"
  />
  <p>
    {body}
  </p>
</article>

<style>
  .card {
    width: 15rem;
  }

  .card > p {
    color: white;
    text-align: center;
  }

  .card > img {
    width: 100%;
  }
</style>
